{% extends 'base.html.twig' %}

{% block title %}Categorie{% endblock %}

{% block body %}
    <h1>Cat√©gorie</h1>

    <table class="table" id="myTable">
        <thead>
            <tr>
                <th>Title</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in pagination %}
            <tr>
                <td>{{ category.title }}</td>
                <td>{{ category.description }}</td>
                <td>{{ category.createdAt ? category.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                <td>
                    <a href="{{ path('app_category_show', {'id': category.id}) }}"class="btn btn-primary">Afficher</a>
                    <a href="{{ path('app_category_edit', {'id': category.id}) }}"class="btn btn-warning">Modifier</a>
                    <a href="{{ path('app_category_delete', {'id': category.id}) }}"class="btn btn-danger">Supprimer</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('app_category_new') }}">Ajouter</a>
    <div class="pagination-container mt-3">
        <ul class="pagination justify-content-center">
            {{ knp_pagination_render(pagination , '@KnpPaginator/Pagination/bootstrap_v5_pagination.html.twig') }}
        </ul>
    </div>
{% endblock %}
